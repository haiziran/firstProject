    /*文件上传*/
    function funwenjianUploader(){
        $("#filePicker webuploader-pick +div").css({"top":"55px","left":"278px"});
        var $list = $('#fileList');
        var ratio = window.devicePixelRatio || 1; 
        var thumbnailWidth = 100 * ratio;
        var thumbnailHeight = 100 * ratio; 
        var uploader = WebUploader.create({ 
            auto: true,
            formData:{
                uid: 123
            },
            swf:'Uploader.swf',
            chunked : true,
            chunkSize: 1024 * 1024,
            threads:1,
            server: 'http://192.168.3.31:8080/bim/upload?token=' +eIdToken +"&loginId=" +eId,
            fileVal:'test',
            pick: '#filePicker',
            accept: {
                title: 'Images',
                extensions: 'gif,jpg,jpeg,bmp,png',
                mimeTypes: 'image/jpg,image/jpeg,image/png'
            },
            compress : false        
        });

        uploader.on( 'fileQueued', function( file ) {
            console.log("file",file);
            var $li = $(
                    '<div id="' + file.id + '" class="file-item thumbnail">' +
                        '<img>' +
                    '</div>'
                    ),
                $img = $li.find('img');
     
            $list.append( $li );
            $("#defaultImg").hide();
            $(".webuploader-pick").css("top","-50px");
     
            // 创建缩略图
            uploader.makeThumb( file, function( error, src ) {
                if ( error ) {
                    $img.replaceWith('<span>不能预览</span>');
                    return;
                } 
                $img.attr( 'src', src );
                $(".neIMg").attr("src",src);
            }, thumbnailWidth, thumbnailHeight );
        });

        uploader.on( 'uploadSuccess', function( file,data ) {
            $( '#'+file.id ).addClass('upload-state-done');
            console.log("data",data);
            $("#getfileId").attr("data-fileId",data.result.fileId);
            alert(data.result.fileId);
            alert($("#getfileId").attr("data-fileId",data.result.fileId));
            console.log("路径",data.result.tempFileDir + data.result.fileId);
        });

        uploader.on( 'uploadError', function( file ) {
            var $li = $( '#'+file.id ),
                $error = $li.find('div.error');
     
            // 避免重复创建
            if ( !$error.length ) {
                $error = $('<div class="error"></div>').appendTo( $li );
            }
     
            $error.text('上传失败!!!');
        });
     
        uploader.on( 'uploadComplete', function( file ) {
            $( '#'+file.id ).find('.progress').remove();
        });
    }
